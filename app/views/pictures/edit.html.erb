<nav id="left">
	<%= link_to '←', pictures_path, :title => "Back" %>
	<%= link_to '✘', @picture, 
			:method => :delete,
			:confirm => "Are you sure you want to delete this picture?",
			:title => "Delete this picture",
			:class => "delete"
	%>
</nav>
<%= form_for @picture do |f| %>
	<p>
		<label>Artist</label><br>
		<%= f.text_field "artist" %>
	</p>
	<p>
		<label>Title</label><br>
		<%= f.text_field "title" %>
	</p>
	<p>
		<label>URL</label><br>
		<%= f.text_field "url" %>
	</p>
	<p>
		<label>Thumbnail URL</label><br>
		<%= f.text_field "thumbnail_url" %>
	</p>
	<p>
		<%= f.submit "Update" %>	
	</p>
<% end %>
<img src="<%= @picture.url %>" id="fullscreen">