<%= form_for @picture do |f| %>
	<p>
		<label>Artist</label><br>
		<%= f.text_field "artist" %>
	</p>
	<p>
		<label>Title</label><br>
		<div class="error"><%= @picture.errors[:title].join(", ").capitalize %></div>
		<%= f.text_field "title" %>
	</p>
	<p>
		<label>URL</label><br>
		<div class="error"><%= @picture.errors[:url].join(", ").capitalize %></div>
		<%= f.text_field "url" %>
	</p>
	<p>
		<label>Thumbnail URL</label><br>
		<div class="error"><%= @picture.errors[:thumbnail_url].join(", ").capitalize %></div>
		<%= f.text_field "thumbnail_url" %>
	</p>
	<p>
		<%= f.submit "Add" %>	
	</p>
<% end %>