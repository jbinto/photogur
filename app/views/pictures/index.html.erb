<h2>Some interesting pictures.</h2>
<div class="index">
	<% @pictures.each do |pic| %>
		<%= link_to(pic) do %>
			<article>
				<img src="<%= pic.thumbnail_url %>">
				<caption>
					<strong><%= pic.title %></strong> 
					by 
					<em><%= pic.artist %></em>
				</caption>
			</article>
		<% end %>
	<% end %>
</div>